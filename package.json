{
  "name": "server-logiflowerp-root",
  "version": "1.0.0",
  "description": "Microservicio de root de Logiflow ERP",
  "main": "server.js",
  "scripts": {
    "build": "npx tsc && tsc-alias",
    "prebuild": "npm run copy-html-once",
    "copy-html-once": "copyfiles -u 1 public/*.html build/public",
    "start": "node build/server.js",
    "dev": "ts-node-dev --env-file=.env --files -r tsconfig-paths/register --respawn server.ts"
  },
  "repository": {
    "type": "git",
    "url": "git@github-empresa.com:LOGIFLOW-ERP/server-logiflowerp-root.git"
  },
  "author": "Antonio Mejia",
  "license": "ISC",
  "dependencies": {
    "amqplib": "^0.10.5",
    "axios": "^1.8.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "env-var": "^7.5.0",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "inversify": "^6.2.2",
    "inversify-express-utils": "^6.4.10",
    "jsonwebtoken": "^9.0.2",
    "logiflowerp-sdk": "^1.0.289",
    "mongodb": "^6.13.0",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.9",
    "redis": "^4.7.0",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/nodemailer": "^6.4.17",
    "copyfiles": "^2.4.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3"
  }
}
